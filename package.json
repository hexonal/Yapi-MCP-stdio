{
  "name": "hexonal-yapi-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for YApi integration",
  "main": "dist/index.js",
  "bin": {
    "yapi-mcp-server": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && tsc-alias && chmod +x ./dist/cli.js",
    "type-check": "tsc --noEmit",
    "dev": "tsx src/cli.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "inspect": "pnpx @modelcontextprotocol/inspector",
    "prepublishOnly": "npm run build",
    "test:local": "node dist/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hexonal/Yapi-MCP-stdio.git"
  },
  "keywords": [
    "yapi",
    "mcp",
    "typescript",
    "api",
    "documentation"
  ],
  "author": "hexonal",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0",
    "axios": "^1.7.9",
    "yargs": "^17.7.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.32",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}